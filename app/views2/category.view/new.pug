extends ../layout

block content
  section.bg-light
    .container
      h1.text-center Create Category
      form(action="/categories" method="POST" enctype="multipart/form-data")
        .row
          .col-3 
            .image-upload
              label(for='file-input')
                img#preview.rounded-circle(src='https://icons.iconarchive.com/icons/dtafalonso/android-lollipop/128/Downloads-icon.png' width='300' height='300')
              input#file-input.d-none(type='file' name="image")

              script.
                const inputTag = document.getElementById('file-input');
                const previewImageTag = document.getElementById('preview');
                inputTag.onchange = () => {
                   const [file] = inputTag.files
                    if (file) {
                      previewImageTag.src = URL.createObjectURL(file)
                    }
                }
          .col-9
            .col-12.mt-2
              .form-group
                label(for='full-name') Category Name
                input#full-name.form-control(type='text' name='name' placeholder='Input your category name')
            .col-12.mt-2
              .form-group
                label(for='email') Description
                textarea.w-100(name='description' placeholder='Input your description')
            .col-12.mt-5
              button.btn.btn-primary.w-100(type="submit") Submit
