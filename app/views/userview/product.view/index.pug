extends ../layout

block content
  .page-wrapper
    include ../partials/header
    main.main
      .page-header.text-center(style="background-image: url('images/page-header-bg.jpg')")
        .container
          h1.page-title
            | Category
            span Shop
        // End .container
      // End .page-header
      nav.breadcrumb-nav.mb-2(aria-label='breadcrumb')
        .container
          ol.breadcrumb
            li.breadcrumb-item
              a(href='/') Home
            li.breadcrumb-item
              a(href='#') Shop
            li.breadcrumb-item.active(aria-current='page') Grid 4 Columns
        // End .container
      // End .breadcrumb-nav
      .page-content
        .container
          .row
            .col-lg-9
              .toolbox
                .toolbox-left
                  .toolbox-info
                    | Showing 
                    span 9 of 56
                    |  Products
                  // End .toolbox-info
                // End .toolbox-left
                .toolbox-right
                  .toolbox-sort
                    label(for='sortby') Sort by:
                    .select-custom
                      select#sortby.form-control(name='sortby')
                        option(value='popularity' selected='selected') Most Popular
                        option(value='rating') Most Rated
                        option(value='date') Date
                  // End .toolbox-sort
                // End .toolbox-right
              // End .toolbox
              .products.mb-3
                .row
                  each product in products
                    .col-6.col-md-4.col-lg-4.col-xl-3
                      .product.product-7.text-center
                        figure.product-media
                          span.product-label.label-new New
                          a(href=`/prusers/${product.id}`)
                            if(product.image)
                              img.product-image#products-list-view(src=`data:image/png;base64,${product.image.toString('base64')}`, alt=`product_${product.name}` )
                          
                          form(action="/carts", method="post").product-action
                            input(type="hidden", name="quantity" value="1")
                            input(type="hidden", name="productId" value=product.id)
                            button.btn-product.border-0.btn-cart(type="submit")
                              span add to cart

                          // End .product-action
                        // End .product-media
                        .product-body
                          .product-cat
                            a(href='#')=product.category.name
                          // End .product-cat
                          h3.product-title.product-title-user
                            a(href='#')= product.name
                          // End .product-title
                          .product-price
                            = product.price 
                            |.000Ä‘
                          // End .product-price
                          .ratings-container
                            .ratings
                              .ratings-val(style='width: 20%;')
                              // End .ratings-val
                            // End .ratings
                            span.ratings-text ( 2 Reviews )
                          // End .rating-container
                        // End .product-body
                      // End .product
                    // End .col-sm-6 col-lg-4 col-xl-3
                // End .row
              // End .products
              nav(aria-label='Page navigation')
                ul.pagination.justify-content-center
                  li.page-item(class=`${currentPage <= 1 ? 'disabled' : ''}`)
                    a.page-link.page-link-prev(href=`/prusers/?pageSize=${pageSize}&currentPage=${currentPage-1}` aria-label='Previous' tabindex='-1' aria-disabled='true')
                      span(aria-hidden='true')
                        i.icon-long-arrow-left
                      | Prev
                  li.page-item.active(aria-current='page')
                    a.page-link(href='#') 1
                  li.page-item
                    a.page-link(href='#') 2
                  li.page-item
                    a.page-link(href='#') 3
                  li.page-item-total of 6s
                  li.page-item(class=`${ products.length < pageSize ? 'disabled' : ''}`)
                  a.page-link.page-link-next(href=`/prusers/?pageSize=${pageSize}&currentPage=${currentPage+1}` aria-label='Next')
                    | Next 
                    span(aria-hidden='true')
                      i.icon-long-arrow-right
            // End .col-lg-9
            aside.col-lg-3.order-lg-first
              .sidebar.sidebar-shop
                .widget.widget-clean
                  label Filters:
                  a.sidebar-filter-clear(href='#') Clean All
                // End .widget widget-clean
                .widget.widget-collapsible
                  h3.widget-title
                    a(data-toggle='collapse' href='#widget-1' role='button' aria-expanded='true' aria-controls='widget-1')
                      | Category
                  // End .widget-title
                  #widget-1.collapse.show
                    .widget-body
                      .filter-items.filter-items-count
                        .filter-item
                          .custom-control.custom-checkbox
                            input#cat-1.custom-control-input(type='checkbox')
                            label.custom-control-label(for='cat-1') Dresses
                          // End .custom-checkbox
                          span.item-count 3
                        // End .filter-item
                        .filter-item
                          .custom-control.custom-checkbox
                            input#cat-2.custom-control-input(type='checkbox')
                            label.custom-control-label(for='cat-2') T-shirts
                          // End .custom-checkbox
                          span.item-count 0
                        // End .filter-item
                        .filter-item
                          .custom-control.custom-checkbox
                            input#cat-3.custom-control-input(type='checkbox')
                            label.custom-control-label(for='cat-3') Bags
                          // End .custom-checkbox
                          span.item-count 4
                        // End .filter-item
                        .filter-item
                          .custom-control.custom-checkbox
                            input#cat-4.custom-control-input(type='checkbox')
                            label.custom-control-label(for='cat-4') Jackets
                          // End .custom-checkbox
                          span.item-count 2
                        // End .filter-item
                        .filter-item
                          .custom-control.custom-checkbox
                            input#cat-5.custom-control-input(type='checkbox')
                            label.custom-control-label(for='cat-5') Shoes
                          // End .custom-checkbox
                          span.item-count 2
                        // End .filter-item
                        .filter-item
                          .custom-control.custom-checkbox
                            input#cat-6.custom-control-input(type='checkbox')
                            label.custom-control-label(for='cat-6') Jumpers
                          // End .custom-checkbox
                          span.item-count 1
                        // End .filter-item
                        .filter-item
                          .custom-control.custom-checkbox
                            input#cat-7.custom-control-input(type='checkbox')
                            label.custom-control-label(for='cat-7') Jeans
                          // End .custom-checkbox
                          span.item-count 1
                        // End .filter-item
                        .filter-item
                          .custom-control.custom-checkbox
                            input#cat-8.custom-control-input(type='checkbox')
                            label.custom-control-label(for='cat-8') Sportwear
                          // End .custom-checkbox
                          span.item-count 0
                        // End .filter-item
                      // End .filter-items
                    // End .widget-body
                  // End .collapse
                // End .widget
                .widget.widget-collapsible
                  h3.widget-title
                    a(data-toggle='collapse' href='#widget-2' role='button' aria-expanded='true' aria-controls='widget-2')
                      | Size
                  // End .widget-title
                  #widget-2.collapse.show
                    .widget-body
                      .filter-items
                        .filter-item
                          .custom-control.custom-checkbox
                            input#size-1.custom-control-input(type='checkbox')
                            label.custom-control-label(for='size-1') XS
                          // End .custom-checkbox
                        // End .filter-item
                        .filter-item
                          .custom-control.custom-checkbox
                            input#size-2.custom-control-input(type='checkbox')
                            label.custom-control-label(for='size-2') S
                          // End .custom-checkbox
                        // End .filter-item
                        .filter-item
                          .custom-control.custom-checkbox
                            input#size-3.custom-control-input(type='checkbox' checked='')
                            label.custom-control-label(for='size-3') M
                          // End .custom-checkbox
                        // End .filter-item
                        .filter-item
                          .custom-control.custom-checkbox
                            input#size-4.custom-control-input(type='checkbox' checked='')
                            label.custom-control-label(for='size-4') L
                          // End .custom-checkbox
                        // End .filter-item
                        .filter-item
                          .custom-control.custom-checkbox
                            input#size-5.custom-control-input(type='checkbox')
                            label.custom-control-label(for='size-5') XL
                          // End .custom-checkbox
                        // End .filter-item
                        .filter-item
                          .custom-control.custom-checkbox
                            input#size-6.custom-control-input(type='checkbox')
                            label.custom-control-label(for='size-6') XXL
                          // End .custom-checkbox
                        // End .filter-item
                      // End .filter-items
                    // End .widget-body
                  // End .collapse
                // End .widget
                .widget.widget-collapsible
                  h3.widget-title
                    a(data-toggle='collapse' href='#widget-3' role='button' aria-expanded='true' aria-controls='widget-3')
                      | Colour
                  // End .widget-title
                  #widget-3.collapse.show
                    .widget-body
                      .filter-colors
                        a(href='#' style='background: #b87145;')
                          span.sr-only Color Name
                        a(href='#' style='background: #f0c04a;')
                          span.sr-only Color Name
                        a(href='#' style='background: #333333;')
                          span.sr-only Color Name
                        a.selected(href='#' style='background: #cc3333;')
                          span.sr-only Color Name
                        a(href='#' style='background: #3399cc;')
                          span.sr-only Color Name
                        a(href='#' style='background: #669933;')
                          span.sr-only Color Name
                        a(href='#' style='background: #f2719c;')
                          span.sr-only Color Name
                        a(href='#' style='background: #ebebeb;')
                          span.sr-only Color Name
                      // End .filter-colors
                    // End .widget-body
                  // End .collapse
                // End .widget
                .widget.widget-collapsible
                  h3.widget-title
                    a(data-toggle='collapse' href='#widget-4' role='button' aria-expanded='true' aria-controls='widget-4')
                      | Brand
                  // End .widget-title
                  #widget-4.collapse.show
                    .widget-body
                      .filter-items
                        .filter-item
                          .custom-control.custom-checkbox
                            input#brand-1.custom-control-input(type='checkbox')
                            label.custom-control-label(for='brand-1') Next
                          // End .custom-checkbox
                        // End .filter-item
                        .filter-item
                          .custom-control.custom-checkbox
                            input#brand-2.custom-control-input(type='checkbox')
                            label.custom-control-label(for='brand-2') River Island
                          // End .custom-checkbox
                        // End .filter-item
                        .filter-item
                          .custom-control.custom-checkbox
                            input#brand-3.custom-control-input(type='checkbox')
                            label.custom-control-label(for='brand-3') Geox
                          // End .custom-checkbox
                        // End .filter-item
                        .filter-item
                          .custom-control.custom-checkbox
                            input#brand-4.custom-control-input(type='checkbox')
                            label.custom-control-label(for='brand-4') New Balance
                          // End .custom-checkbox
                        // End .filter-item
                        .filter-item
                          .custom-control.custom-checkbox
                            input#brand-5.custom-control-input(type='checkbox')
                            label.custom-control-label(for='brand-5') UGG
                          // End .custom-checkbox
                        // End .filter-item
                        .filter-item
                          .custom-control.custom-checkbox
                            input#brand-6.custom-control-input(type='checkbox')
                            label.custom-control-label(for='brand-6') F&amp;F
                          // End .custom-checkbox
                        // End .filter-item
                        .filter-item
                          .custom-control.custom-checkbox
                            input#brand-7.custom-control-input(type='checkbox')
                            label.custom-control-label(for='brand-7') Nike
                          // End .custom-checkbox
                        // End .filter-item
                      // End .filter-items
                    // End .widget-body
                  // End .collapse
                // End .widget
                .widget.widget-collapsible
                  h3.widget-title
                    a(data-toggle='collapse' href='#widget-5' role='button' aria-expanded='true' aria-controls='widget-5')
                      | Price
                  // End .widget-title
                  #widget-5.collapse.show
                    .widget-body
                      .filter-price
                        .filter-price-text
                          | Price Range:
                          span#filter-price-range
                        // End .filter-price-text
                        #price-slider
                        // End #price-slider
                      // End .filter-price
                    // End .widget-body
                  // End .collapse
                // End .widget
              // End .sidebar sidebar-shop
            // End .col-lg-3
          // End .row
        // End .container
      // End .page-content
    // End .main
    include ../partials/footer

