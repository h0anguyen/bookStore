extends ../layout

block content
  section.bg-light
    .container
      a.btn.btn-primary(href="/categories/new") Create new category
    .container
      table.table
        thead.thead-dark
          tr
            th(scope='col') id
            th(scope='col') name
            th(scope='col') description
            th(scope='col') image

        tbody
          each category in categories 
            tr
              td= category.id
              td= category.name
              td= category.description
              td
                - if (category.image)
                  img.rounded-circle(src=`data:image/png;base64,${category.image.toString('base64')}`, alt=`category_${category.name}`  width='300' height='300')
              td 
                form(method="POST" action=`/categories/${category.id}?_method=DELETE`)
                  button.btn.btn-danger(type="submit")
                    i.fa.fa-trash
            